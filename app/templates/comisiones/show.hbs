{{close-delay target=".side-panel" delay=700 closeClass="close" transitionTo='comisiones.index'}}

{{#liquid-if model class="side-panel anim-article show"}}
	<article>
		<h2>Comisi√≥n de {{model.comision.datos.nombre}}</h2>

		<ul>
		<h3>Integrantes</h3>
		{{#each model.comision.legisladores as |integrante|}}
			{{#if integrante.fk_legislador.fk_persona_fisica.datos.nombre}}
				<li>{{integrante.cargo}} {{integrante.fk_legislador.cargo}} {{integrante.fk_legislador.distrito}} {{integrante.fk_legislador.fk_persona_fisica.datos.nombre}} {{integrante.fk_legislador.fk_persona_fisica.datos.apellido}}</li>
			{{else}}
				<li>dummmmmmy</li>
			{{/if}}
		{{/each}}
		</ul>

		<ul>
		<h3>Citaciones</h3>
		{{#each model.citaciones as |citacion|}}
			{{#if citacion.resumen}}
				<li>
				{{time-format citacion.fecha '[El] Do [de] MMMM [de] dddd [a las] h:mm'}}<br> {{citacion.estado}} <br> {{citacion.resumen}} <br> {{citacion.observaciones}} <br> <small>({{citacion.fk_lugar.nombre}} | {{citacion.fk_lugar.ubicacion}})</small></li>
			{{else}}
				<li>dummmmmmy</li>
			{{/if}}
		{{/each}}
		</ul>

		<h3>Proyectos</h3>
		<ul>
		{{#each model.proyectos as |proyecto|}}
			<li>
				{{proyecto.codigo_exp}} {{#link-to 'proyectos.show' proyecto}}ver{{/link-to}}
			</li>
		{{/each}}
		</ul>
		{{infinity-loader infinityModel=model targetScroll="body"}}
	</article>
{{/liquid-if}}