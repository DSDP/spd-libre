<div class="container ordenes-del-dia">
	<div class="offcanvas">
		{{outlet}}
	</div>
	<div class="heading">
		<h1>Ordenes del d√≠a</h1>
		<div class="-actions">
			<div class="sort">
				{{fa-icon 'filter'}}
			</div>
		</div>
	</div>
	<section>
		<div class="-list">
		{{#each model as |orden_del_dia|}}
		  {{#if orden_del_dia.numero}}
			  <div class="-item">
				  {{#link-to 'ordenes-del-dia.show' orden_del_dia.id}}{{orden_del_dia.numero}}{{/link-to}}
			  </div>
		  {{else}}
			   <div class="-item -fulfilled">
				  <span class="item-1"></span>
				  <span class="item-2"></span>
				  <span class="item-3"></span>
			  </div>
		  {{/if}}
		{{/each}}
		</div>
		
		{{infinity-loader infinityModel=model}}
	</section>
</div>


