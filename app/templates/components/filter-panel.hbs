<div class="heading">
	<h1>{{title}}</h1>
	<div class="-actions" {{action 'toggleShowAvailableFilters'}}>
		<div class="item sort">
			{{fa-icon 'filter'}}
		</div>
	</div>
</div>

<div class="filter-container">
	
	{{#if showAvailableFilters}}
	<div class="add-filter-list">
		<ul>
		{{#each availableFiltersList as |availableFilter|}}
			<li> 
				{{availableFilter.name}} 
				<a {{action 'addFilter' availableFilter}}> Agregar </a>
			</li>
		{{/each}} 
		</ul>
	</div>
	{{/if}}

	{{#each filters as |filter|}}
		{{filter-item filter=filter class="search-filter" action="removeFilter"}}
	{{/each}}

	<a {{action 'search'}}>Buscar</a>
</div>

